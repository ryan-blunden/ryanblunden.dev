---
import { Image } from "astro:assets";
import ryanPortrait from "../assets/ryan.jpg";

const title = "Ryan Blunden";
const subtitle =
  "I help tech companies ship videos faster by turning existing technical materials into engaging videos for developers.";
const kicker = "ryanblunden.dev";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        color-scheme: dark;
      }

      * {
        box-sizing: border-box;
      }

      html,
      body {
        margin: 0;
        background: #07090c;
        font-family: "Inter", system-ui, sans-serif;
        width: 1200px;
        height: 630px;
        overflow: hidden;
      }

      .og-canvas {
        width: 100%;
        height: 100%;
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 48px;
        padding: 72px 80px;
        background:
          radial-gradient(
            circle at 15% 15%,
            rgba(61, 125, 255, 0.22),
            transparent 45%
          ),
          radial-gradient(
            circle at 80% 20%,
            rgba(92, 233, 255, 0.18),
            transparent 55%
          ),
          linear-gradient(140deg, rgba(20, 24, 32, 0.96), rgba(9, 12, 18, 0.98));
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.04);
        color: #f5f7ff;
      }

      .og-content {
        display: flex;
        width: 640px;
        flex-direction: column;
        justify-content: center;
        gap: 22px;
      }

      .og-kicker {
        font-size: 20px;
        letter-spacing: 0.24em;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.5);
        font-weight: 600;
      }

      .og-title {
        font-size: 64px;
        line-height: 1.05;
        font-weight: 800;
        letter-spacing: -0.02em;
        margin: 0;
      }

      .og-subtitle {
        font-size: 28px;
        line-height: 1.3;
        color: rgba(229, 234, 255, 0.85);
        margin: 0;
      }

      .og-portrait {
        align-self: start;
        display: grid;
        place-items: start;
        width: 100%;
        height: 100%;
      }

      .og-portrait-frame {
        width: 100%;
        max-width: 320px;
        aspect-ratio: 1 / 1.2;
        border-radius: 32px;
        padding: 10px;
        background: linear-gradient(
          150deg,
          rgba(255, 255, 255, 0.2),
          rgba(255, 255, 255, 0.02)
        );
        box-shadow: 0 30px 80px rgba(0, 0, 0, 0.45);
      }

      .og-portrait img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 24px;
      }
    </style>
  </head>
  <body>
    <div class="og-canvas" id="og-image">
      <div class="og-portrait">
        <div class="og-portrait-frame">
          <Image src={ryanPortrait} alt="Ryan Blunden" />
        </div>
      </div>
      <div class="og-content">
        <div class="og-kicker">{kicker}</div>
        <h1 class="og-title">{title}</h1>
        <p class="og-subtitle">{subtitle}</p>
      </div>
    </div>
  </body>
</html>
