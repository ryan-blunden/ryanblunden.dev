---
import BaseLayout from "../layouts/BaseLayout.astro";
import GoogleAnalytics from "../components/google-analytics.astro";
import TestimonialGrid from "../components/testimonial-grid.astro";
import Testimonial from "../components/testimonial.astro";
import FAQList from "../components/faq-list.astro";
import FAQ from "../components/faq.astro";
import CTA from "../components/cta.astro";
import YouTubeGrid from "../components/youtube-grid.astro";

const title = "Developer Enablement Video";
const description =
  "I turn existing technical materials into accurate video used for developer enablement, product onboarding, and customer success.";
---

<BaseLayout title={title} description={description}>
  <GoogleAnalytics />
  <main class="pt-24">
    <header
      class="fixed inset-x-0 top-0 z-50 border-b border-gray-200 bg-white/90 backdrop-blur dark:border-gray-800 dark:bg-gray-900/90"
    >
      <div
        class="mx-auto flex max-w-screen-xl items-center justify-between px-4 py-6"
      >
        <a class="text-lg font-semibold text-gray-900 dark:text-white" href="/"
          >RyanBlunden.dev</a
        >
        <nav
          class="hidden items-center gap-6 text-sm font-medium text-gray-500 dark:text-gray-400 md:flex"
        >
          <a
            class="transition hover:text-primary-700 dark:hover:text-primary-500"
            href="#services">Services</a
          >
          <a
            class="transition hover:text-primary-700 dark:hover:text-primary-500"
            href="#my-work">Work</a
          >
          <a
            class="transition hover:text-primary-700 dark:hover:text-primary-500"
            href="#faqs">FAQs</a
          >
        </nav>
        <a
          class="inline-flex items-center rounded-lg bg-primary-700 px-4 py-2 text-sm font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
          href="https://calendly.com/ryan-blunden/"
        >
          Book a call
        </a>
      </div>
    </header>

    <section class="bg-white dark:bg-gray-900">
      <div class="mx-auto max-w-screen-xl px-4 py-8 sm:py-16 pt-8">
        <div class="text-center motion-safe:animate-[rise_0.8s_ease-out]">
          <p
            class="text-base font-semibold uppercase tracking-[0.2em] text-gray-600 dark:text-gray-300"
          >
            Technical Video Production
          </p>
          <h1
            class="mt-5 text-4xl font-extrabold tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white"
          >
            Produce more video content without putting your engineers on camera
          </h1>
          <p
            class="mx-auto mt-4 max-w-3xl text-lg text-gray-500 md:text-lg lg:text-xl dark:text-gray-400"
          >
            Convert existing technical content into self-contained videos that
            drive developer engagement across your documentation, marketing
            site, and YouTube.
          </p>
        </div>
        <div class="mt-10 sm:mt-12 lg:mt-16">
          <div
            class="overflow-hidden rounded-lg border border-gray-200 bg-gray-900 shadow-xl dark:border-gray-700 motion-safe:animate-[rise_1s_ease-out]"
            style="animation-delay: 120ms;"
          >
            <iframe
              class="aspect-video h-full w-full"
              src="https://www.youtube.com/embed/ZHYK0m9rpB0?rel=0"
              title="Featured technical video"
              loading="eager"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen></iframe>
          </div>
        </div>

        <div
          class="mt-8 flex flex-col items-center gap-4 sm:flex-row sm:justify-center"
        >
          <!-- <p
            class="mx-auto text-center max-w-3xl text-lg text-gray-500 md:text-lg lg:text-xl dark:text-gray-400"
          >
            Leverage the technical assets you already have into videos that
            accelerate developer onboarding, enablement, and activation.
          </p> -->
        </div>
      </div>
    </section>

    <section class="bg-gray-50 dark:bg-gray-900">
      <div class="mx-auto max-w-screen-xl px-4 py-12">
        <div class="mx-auto mb-10 max-w-2xl text-center">
          <p
            class="text-base font-semibold uppercase tracking-[0.2em] text-gray-600 dark:text-gray-300"
          >
            Opportunity
          </p>
          <h2
