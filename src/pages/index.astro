	<GoogleAnalytics />
	<main>
		<header class="relative z-20">
			<div class="mx-auto flex max-w-screen-xl items-center justify-between px-4 py-6">
				<a class="text-lg font-semibold text-gray-900 dark:text-white" href="/">Ryan Blunden</a>
				<nav class="hidden items-center gap-6 text-sm font-medium text-gray-500 dark:text-gray-400 md:flex">
					<a class="transition hover:text-primary-700 dark:hover:text-primary-500" href="#services">Services</a>
					<a class="transition hover:text-primary-700 dark:hover:text-primary-500" href="#my-work">Work</a>
					<a class="transition hover:text-primary-700 dark:hover:text-primary-500" href="#faqs">FAQs</a>
				</nav>
				<a
					class="inline-flex items-center rounded-lg bg-primary-700 px-4 py-2 text-sm font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
