                id="sample-video-tabs"
                class="sample-select block w-full px-3 py-2.5 text-sm focus:outline-none"
              >
                <option value="educational-panel">Educational</option>
                <option value="tutorial-panel">Tutorial</option>
              </select>
            </div>
            <ul
              class="sample-tabs hidden text-sm font-medium text-center sm:flex -space-x-px justify-center max-w-md mx-auto"
              id="sample-videos-tabs"
              role="tablist"
            >
              <li class="w-full focus-within:z-10" role="presentation">
                <button
                  class="sample-tab is-active inline-block w-full font-medium leading-5 text-sm px-4 py-2.5 focus:outline-none rounded-s-base hover:cursor-pointer"
                  id="educational-tab"
                  data-sample-tab="educational-panel"
                  type="button"
                  role="tab"
                  aria-controls="educational-panel"
                  aria-selected="true"
                >
                  Educational
                </button>
              </li>
              <li class="w-full focus-within:z-10" role="presentation">
                <button
                  class="sample-tab inline-block w-full font-medium leading-5 text-sm px-4 py-2.5 focus:outline-none rounded-e-base hover:cursor-pointer"
                  id="tutorial-tab"
                  data-sample-tab="tutorial-panel"
                  type="button"
                  role="tab"
                  aria-controls="tutorial-panel"
                  aria-selected="false"
                >
                  Tutorial
                </button>
