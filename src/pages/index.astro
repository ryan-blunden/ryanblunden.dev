    <script is:inline>
      const tabs = Array.from(document.querySelectorAll("[data-sample-tab]"));
      const panels = Array.from(
        document.querySelectorAll("[data-sample-panel]"),
      );
      const select = document.getElementById("sample-video-tabs");

      const setActiveTab = (panelId) => {
        tabs.forEach((tab) => {
          const isActive = tab.dataset.sampleTab === panelId;
          tab.classList.toggle("is-active", isActive);
          tab.setAttribute("aria-selected", isActive ? "true" : "false");
        });
        panels.forEach((panel) => {
          panel.classList.toggle("hidden", panel.id !== panelId);
        });
        if (select) {
          select.value = panelId;
        }
      };

      tabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          setActiveTab(tab.dataset.sampleTab);
        });
      });

      if (select) {
        select.addEventListener("change", (event) => {
          setActiveTab(event.target.value);
        });
      }
    </script>

