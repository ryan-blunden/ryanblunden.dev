---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;

import '../styles/tailwind.css';
import '../styles/custom.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta property="og:image" content="https://ryanblunden.dev/og-image.jpg" />
	</head>
	<body>
		<slot />
	</body>
</html>
