---
interface Props {
	href?: string | undefined;
	target?: string | undefined;
}
const { href, target } = Astro.props;
const El = href ? 'a' : 'span';
---

<li class="not-content sl-flex">
	<El class="media-card sl-flex" {href} {target}>
		<div class="media"><slot name="media" /></div>
		<slot />
	</El>
</li>

<style>
	.media-card {
		flex-direction: column;
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: 1rem;
		overflow: hidden;
		text-decoration: none;
		background: linear-gradient(160deg, rgba(24, 28, 40, 0.9), rgba(14, 16, 24, 0.8));
		box-shadow: 0 18px 40px rgba(0, 0, 0, 0.35);
		width: 100%;
		transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
	}
	a.media-card:hover {
		border-color: rgba(255, 255, 255, 0.22);
		box-shadow: 0 24px 55px rgba(0, 0, 0, 0.45);
		transform: translateY(-4px);
	}

	.media {
		border-bottom: 1px solid rgba(255, 255, 255, 0.08);
	}

	.media :global(img),
	.media :global(iframe),
	.media :global(lite-youtube) {
		display: block;
		max-width: 100%;
		height: auto;
		aspect-ratio: 16 / 9;
		object-fit: cover;
	}

	.media-card :global(.title) {
		color: var(--sl-color-white);
		font-weight: 600;
		line-height: var(--sl-line-height-headings);
	}
</style>
