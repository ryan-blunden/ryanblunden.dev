---
interface Props {
  title: string;
  cta: string;
  href: string;
  target?: string;
  note?: string;
}

const { title, cta, href, target, note } = Astro.props;
---

<div class="mx-auto text-center">
  <h2
    class="mb-4 text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl dark:text-white"
  >
    {title}
  </h2>
  <p class="mb-6 text-gray-500 md:text-lg dark:text-gray-400">
    <slot />
  </p>
  <div class="sm:flex items-center justify-center gap-3">
    <a
      {href}
      {target}
      class="inline-flex w-full items-center justify-center rounded-lg bg-primary-700 px-6 py-3 text-sm font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
    >
      {cta}
    </a>
  </div>
  {note && <p class="mt-3 text-sm text-gray-500 dark:text-gray-300">{note}</p>}
</div>
