---
interface Props {
  title: string;
  cta: string;
  href: string;
  target?: string;
  note?: string;
}

const { title, cta, href, target, note } = Astro.props;
---

<div class="mx-auto text-center">
  <h2 class="lux-section-title mb-4">
    {title}
  </h2>
  <p class="mb-6 text-base text-slate-300 md:text-lg">
    <slot />
  </p>
  <div class="sm:flex items-center justify-center gap-3">
    <a
      {href}
      {target}
      class="inline-flex w-full items-center justify-center rounded-xl border border-transparent bg-white px-7 py-2.5 text-sm font-semibold !text-black no-underline shadow-[0_10px_24px_rgba(0,0,0,0.28)] sm:w-auto"
    >
      {cta}
    </a>
  </div>
  {note && <p class="mt-3 text-sm text-slate-400">{note}</p>}
</div>
